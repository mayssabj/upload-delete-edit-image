<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"  crossorigin="anonymous">
    <title>File Uploads</title>
    
    <style>
        img{
           
         width:100%;
            border:solid 1px #ccc;
      
        }
        h1{
            text-align:center;
        }
    </style>
</head>
 
<body>

    <div class="container">
        <div class="row">
  <div class="col-lg-12"> <h1>Preview Image</h1></div> 
  <div class="col-lg-12"> <a href="/" class="btn btn-primary">Go Back</a></div>


  <%x.forEach((y)=>{%>
    <div class="col-lg-4">
        <img src="./images/<%=y.Picture%>">
        <a href="/edit/<%=y._id%>" class="btn btn-primary mt-2 mb-4">Edit Image</a>
        <form method="post" action="/delete/<%=y.Picture%>?_method=DELETE" style="display:inline;">
            <button type="submit"  class="btn btn-primary mt-2 mb-4">Delete</button>
        </form>
    </div>
    <%})%>

       

     </div>  

    </div>
    </div>
  </body>
</html>